class Solution {
public:

    int minIncrementForUnique(vector<int>& nums) {
        int ma = 0;
        for(int i = 0; i < nums.size(); i++){
            ma= max(ma, nums[i]);
        }
        ma *= 2;
        int n = nums.size();
        n *= 2;
        ma = max(ma, n);
        set<int>s;
        for(int i = 0; i <= ma; i++) s.insert(i);
        for(int i1 = 0; i1 < nums.size(); i1++){
            int i = nums[i1];
            auto it = s.find(i);
            if(it != s.end()){
                s.erase(it);
                nums[i1] = -1;
            }
        }
        sort(nums.begin(), nums.end());
        int ans = 0;
        for(int i = 0; i < nums.size(); i++){
            int c = nums[i];
            if(c != -1){
                auto ind = s.lower_bound(c);
                
                ans += (*ind) - c;
                s.erase(ind);
            }
        }
        return ans;
    }
};
